<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="default" transaction-type="JTA">
    <jta-data-source>java:/HomePulseDS</jta-data-source>

    <properties>
      <!-- Ces propriétés sont lues via les variables d'environnement dans Docker -->
      <property name="jakarta.persistence.jdbc.url"
                value="${env.DATASOURCE_URL}"/>
      <property name="jakarta.persistence.jdbc.user"
                value="${env.DATASOURCE_USERNAME}"/>
      <property name="jakarta.persistence.jdbc.password"
                value="${env.DATASOURCE_PASSWORD}"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- ou validate en prod -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
